# Environment Configuration
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql+asyncpg://smarter_dev:smarter_dev_password@localhost:5432/smarter_dev

# Redis Configuration
REDIS_URL=redis://:smarter_dev_redis_password@localhost:6379/0

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_APPLICATION_ID=your_application_id_here

# API Configuration
API_SECRET_KEY=your_secret_api_key_here
API_BASE_URL=http://localhost:8000/api

# Web Application Configuration
WEB_SESSION_SECRET=your_web_session_secret_here
WEB_HOST=0.0.0.0
WEB_PORT=8000

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
RELOAD=true

# Testing Configuration (for test environment)
TEST_DATABASE_URL=postgresql+asyncpg://smarter_dev:smarter_dev_password@localhost:5432/smarter_dev_test
TEST_REDIS_URL=redis://:smarter_dev_redis_password@localhost:6379/1

# Optional: Admin Interface Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_password_here

# Optional: Discord OAuth (for admin interface)
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:8000/auth/discord/callback

# Optional: Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_FILE=logs/smarter_dev.log

# Optional: Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60